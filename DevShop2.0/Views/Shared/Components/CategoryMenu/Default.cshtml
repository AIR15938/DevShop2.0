@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Course"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Courses<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Course" 
                   asp-action="List"
                   asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Course" 
               asp-action="List" 
               asp-route-Category="">View all courses</a>
        </li>
    </ul>
</li>